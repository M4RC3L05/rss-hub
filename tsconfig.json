{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "#src/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "esm": true,
    "swc": true,
    "transpileOnly": true
  }
}
